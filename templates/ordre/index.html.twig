{% extends 'base.html.twig' %}

{% block title %}Ordre index{% endblock %}

{% block body %}
    <h1>Ordre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Vernaculaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ordre in ordres %}
            <tr>
                <td>{{ ordre.id }}</td>
                <td>{{ ordre.nom }}</td>
                <td>{{ ordre.vernaculaire }}</td>
                <td>
                    <a href="{{ path('ordre_show', {'id': ordre.id}) }}">show</a>
                    <a href="{{ path('ordre_edit', {'id': ordre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ordre_new') }}">Create new</a>
{% endblock %}
