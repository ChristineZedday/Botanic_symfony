{% extends 'base.html.twig' %}

{% block title %}Classe index{% endblock %}

{% block content %}
    <h1>Classe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Caracteres</th>
                <th>Vernaculaire</th>
                <th>Embranchement</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for classe in classes %}
            <tr>
                <td>{{ classe.id }}</td>
                <td>{{ classe.nom }}</td>
                <td>{{ classe.caracteres }}</td>
                <td>{{ classe.vernaculaire }}</td>
                <td>{{ classe.embranchement }}</td>
                <td>
                    <a href="{{ path('classe_show', {'id': classe.id}) }}">show</a>
                    <a href="{{ path('classe_edit', {'id': classe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('classe_new') }}">Create new</a>
{% endblock %}
